<Page
    x:Class="UnoCakesMobile.Views.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoCakesMobile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid IsTapEnabled="True"  Background="#5CAC87"  Tapped="Grid_Tapped">
        <Image Stretch="UniformToFill" Source="ms-appx:///UnoCakesMobile/Assets/cake_bg.png" MaxWidth="360" />
        <Rectangle
                Margin="0,0,-20,-20"
                Fill="#b81f1c"
                RadiusX="20"
                RadiusY="20"
                Height="80"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="80" />
        <SymbolIcon Symbol="Forward" Margin="16" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

        <TextBlock
                FontSize="20"
                Text="&gt;"
                Foreground="White" />
    </Grid>
</Page>
